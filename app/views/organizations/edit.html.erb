<div id="page-wrapper">
  <div class="container-fluid">
    <div class="row">
      <div class="col-lg-12">
        <h1 class="page-header">
          Edit information
        </h1>
        <ol class="breadcrumb">
          <li class="active">
            <%= link_to " Back", :back ,class: "glyphicon glyphicon-arrow-left" %>
          </li>
        </ol>
      </div>
    </div>
    <div class="row">
      <div class="col-lg-6">
        <%= form_for(@current_org, url: organization_path(@current_org.id), html: { method: :put }) do |f| %>
            <p>
              <%= image_tag(@current_org.logo_url) if @current_org.logo? %>
            </p>
            </br></br>
          <div class="form-group">

            <%= f.label :organization_name %></br>
            <%= f.text_field :name, class: "form-control" %></br>

            <%= f.label :address %></br>
            <%= f.text_field :address, class: "form-control" %></br>

            <%= f.label :domain_name %></br>
            <%= f.text_field :domain, class: "form-control" %></br>

            <%= f.label :city %></br>
            <%= f.text_field :city, class: "form-control" %></br>

            <%= f.label :state %></br>
            <%= f.text_field :state, class: "form-control" %></br>

            <%= f.label :pin_code %></br>
            <%= f.text_field :pin_code, class: "form-control" %></br>

            <%= f.label :phone %></br>
            <%= f.text_field :phone, class: "form-control" %></br>

            <%= f.file_field :logo %></br>

            <%= f.submit "Update", class: "btn btn-default" %>
          </div>
         <% end %>
       </div>
     </div>
   </div>
 </div>
