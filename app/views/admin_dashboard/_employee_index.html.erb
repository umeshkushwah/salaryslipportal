<div class="table-responsive">   
  <table class="table table-bordered table-hover table-striped">
    <thead>
      <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Confirmed</th>
        <th>Delete</th> 
        <th>Salary Slip Info</th>
        <th>Banking Info</th> 
      </tr>
    </thead>            
    <% @employees.each do |employee| %>
      <tr>
        <td><b><%= employee.full_name %></b></td>
        <td><i><%= employee.email %></i></td>
        <td><%= link_to_unless(employee.confirmed?, " Confirmed", confirm_employee_admin_dashboard_path(employee.id), :method=> :post)%></td>
        <td><%= link_to_unless(employee.role.name == "admin", "", admin_dashboard_path(employee.id), :method=> :delete, remote: true, class: "glyphicon glyphicon-trash", data: {confirm: 'Are you sure you want to delete?'})  %></td>
        <td><%= link_to " view", employee_salary_slip_index_path(employee.id), class: "glyphicon glyphicon-file"%></td>
        <td><%= link_to " Bank Details", employee_bank_detail_index_path(employee.id) , class: "glyphicon glyphicon-pencil" %></td>
      </tr>
    <% end %>
  </table>
  <%= will_paginate @employees %>
</div>