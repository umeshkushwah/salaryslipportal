<div class="row">
  <div class="col-sm-6 col-sm-offset-3 form-box">
    <div class="form-bottom">
      <h2><small>Resend confirmation instructions</small></h2></br>
      <%= form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: { method: :post }) do |f| %>
        <%= devise_error_messages! %>
        <div class="field">
          <label class="sr-only" for="form-username">Email</label>
          <%= f.email_field :email, autofocus: true, placeholder: "Email...", class: "form-username form-control", id: "form-username", value: (resource.pending_reconfirmation? ? resource.unconfirmed_email : resource.email) %>
        </div></br>
        <button type="submit" class="btn">Resend confirmation instructions</button>
      <% end %>
      <%= render "devise/shared/links" %>
    </div>
  </div>    
</div>

