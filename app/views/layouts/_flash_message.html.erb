<% if flash.present? %>
 <% flash.each do |key, value| %>
    <% if flash.now[:error].present? %>
      <div class="alert alert-danger">
        <button type="button" class="close" data-dismiss="alert">×</button>
        <%= value %>
      </div>
    <% else %>
      <div class="alert alert-success  fade in">
        <button type="button" class="close" data-dismiss="alert">×</button>
        <%= value %>
      </div>
    <% end %>
  <% end %>
<% end %>
