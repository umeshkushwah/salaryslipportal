<% if flash.present? %>
  <% flash.each do |key, value| %>
    <% if flash.now[:error].present? %>
      <div class="alert alert-danger">
      <ul>
        <% value.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
    <% else %>
      <div class="alert alert-success  fade in">
        <button type="button" class="close" data-dismiss="alert">Ã—</button>
        <%= value %>
      </div>
    <% end %>
  <% end %>
<% end %>