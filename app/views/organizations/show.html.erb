<div id="page-wrapper">
  <div class="container-fluid">
    <div class="row">
      <div class="col-lg-12">
        <h1 class="page-header">
          Organization Information
        </h1>
        <ol class="breadcrumb">
          <li class="active">
            <%= link_to " Back", :back ,class: "glyphicon glyphicon-arrow-left" %>
          </li>
        </ol>
      </div>
    </div>
    <div class="row">
      <div class="col-lg-6">
        <div class="table-responsive"> 
          <table class="table table-bordered table-hover table-striped">
            <p>
                <%= image_tag(@current_org.logo_url) if @current_org.logo? %>
            </p>
            <tr>
              <td><b>Organization Name</b></td>
              <td><b><%= @current_org.name %></b></td>
            </tr>
            <tr>
              <td>Address</td>
              <td><%= @current_org.address %></td>
            </tr>
            <tr>
              <td>Domain Name</td>
              <td><%= @current_org.domain %></td>
            </tr>
            <tr>
              <td>City</td>
              <td><%= @current_org.city %></td>
            </tr>
            <tr>
              <td>State</td>
              <td><%= @current_org.state %></td>
            </tr>
            <tr>
              <td>Pin Code</td>
              <td><%= @current_org.pin_code %></td>
            </tr>
            <tr>
              <td>Mobile</td>
              <td><%= @current_org.phone %></td>
            </tr>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
