<div id="page-wrapper">
  <div class="container-fluid">
    <div class="row">
      <div class="col-lg-12">
        <h1 class="page-header">
          Message Conversations
          <small>GrepRuby Webtech Pvt Ltd</small>
        </h1>
        <% if flash[:notice] %>
          <div class="notice"><%= flash[:notice] %></div>
        <% end %>
        <ol class="breadcrumb">
          <li class="active">
            <%= link_to " Back", :back ,class: "glyphicon glyphicon-share-alt" %>
          </li>
        </ol>
          <div class="row">
            <p><%= link_to 'Start conversation', new_message_path, class: 'btn btn-lg btn-primary' %>
            </p>
          </div>

          <div class="table-responsive">   
            <table class="table table-bordered table-hover table-striped">
              <thead>
                <tr>
                  <th>Name</th>
                  <th>Subject</th>
                  <th>Move to trash</th>
                  <th>Mark as read</th>
                </tr>
              </thead>            
              <% @conversations.each do |conversation| %>
                <tr>
                  <td>
                    <% unless conversation.receipts_for(current_employee).first.message.sender.nil? %>
                        <b><%= conversation.receipts_for(current_employee).first.message.sender.full_name %></b>
                    <% else %>
                       User Has been deleted
                    <% end %>
                  </td> 
                  <td><i><%= link_to conversation.subject, conversation_path(conversation) %></i></td>
                  <% if conversation.is_trashed?(current_employee) %>
                    <td><%= link_to 'Restore', restore_conversation_path(conversation), class: 'btn btn-xs btn-info', method: :post %>
                    </td>
                  <% else %>
                    <td><%= link_to 'Move to trash', conversation_path(conversation), class: 'btn btn-xs btn-danger', method: :delete,
                      data: {confirm: 'Are you sure?'} %></td>
                  <td><% if conversation.is_unread?(current_employee) %>
                    <%= link_to 'Mark as read', mark_as_read_conversation_path(conversation),
                      class: 'btn btn-xs btn-info', method: :post %></td>
                      <% end %>
                    <% end %>
                  </tr>
                <% end %>
            </table>
          <%= will_paginate @conversations %>
        </div>
      </div>
    </div>
  </div>
</div>
