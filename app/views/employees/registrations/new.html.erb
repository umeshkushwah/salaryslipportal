<div class="row">
  <div class="col-sm-6 col-sm-offset-3 form-box">
    <div class="form-top">
      <div class="form-top-left">
        <h3>Please enter the information</h3>
        <%= devise_error_messages! %>
        <% flash.each do |key, value| %>
          <div class="flash <%= key %>">
            <%= value %>
          </div>
        <% end %>
      </div>
      
      <div class="form-top-right">
        <i class="fa fa-lock"></i>
      </div>
    </div>
    
    <div class="form-bottom">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <div class="form-group">
        <label class="sr-only" for="form-password">First Name</label>
        <%= f.text_field :first_name, id: "form-password", placeholder: "First Name...", class: "form-password form-control" %>
      </div>
      <div class="form-group">
        <label class="sr-only" for="form-password">Last Name</label>
        <%= f.text_field :last_name, id: "form-password", placeholder: "Last Name...", class: "form-password form-control" %>
      </div>
      <div class="form-group">
        <label class="sr-only" for="form-username">Email</label>
        <%= f.email_field :email, autofocus: true, placeholder: "Email...", class: "form-username form-control", id: "form-username" %>
      </div>

      <div class="form-group">
        <label class="sr-only" for="form-password">Password</label>
        <%= f.password_field :password, autocomplete: "off" , id: "form-password", placeholder: "Password...", class: "form-password form-control" %>
      </div>
      <div class="form-group">
        <label class="sr-only" for="form-password">Confirm Password</label>
        <%= f.password_field :password_confirmation, autocomplete: "off" , id: "form-password", placeholder: "Confirm Password...", class: "form-password form-control" %>
      </div>
      <button type="submit" class="btn">Sign Up!</button>
      <% end %>
      <%= render "devise/shared/links" %>
    </div>    
  </div>
</div>