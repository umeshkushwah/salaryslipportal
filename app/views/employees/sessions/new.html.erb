<div class="row">
  <div class="col-sm-6 col-sm-offset-3 form-box">
    <div class="form-top">
      <div class="form-top-left">
        <h3>Login to our site</h3>
        <p>Enter your username and password to login:</p>
        <%= render :partial => "layouts/devise_flash_message" %>
      </div>
      <div class="form-top-right">
        <i class="fa fa-lock"></i>
      </div>
    </div>
    
    <div class="form-bottom">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-group">
          <label class="sr-only" for="form-username">Email</label>
          <%= f.email_field :email, autofocus: true, placeholder: "Email...", class: "form-username form-control", id: "form-username" %>
        </div>
        <div class="form-group">
          <label class="sr-only" for="form-password">Password</label>
          <%= f.password_field :password, autocomplete: "off" , id: "form-password", placeholder: "Password...", class: "form-password form-control" %>
        </div>
        <button type="submit" class="btn">Sign in!</button>
      <% end %>
      <%= render "devise/shared/links" %>
    </div>    
  </div>
</div>  